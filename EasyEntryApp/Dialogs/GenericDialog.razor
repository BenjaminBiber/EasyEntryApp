@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText>@DescriptionText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="Submit">@AcceptButtonText</MudButton>
        @if(CancelButtonText != "")
        {
            <MudButton Variant="Variant.Text" OnClick="Cancel">@CancelButtonText</MudButton>
        }
    </DialogActions>
</MudDialog>

@code {
    /// <summary>
    /// Gets or sets the MudDialog instance.
    /// </summary>
    [CascadingParameter] IMudDialogInstance? MudDialog { get; set; }

    /// <summary>
    /// Gets or sets the description text displayed in the dialog.
    /// </summary>
    [Parameter]
    public string DescriptionText { get; set; } = "Speichern erfolgreich!";

    /// <summary>
    /// Gets or sets the text for the accept button.
    /// </summary>
    [Parameter]
    public string AcceptButtonText { get; set; } = "Speichern";

    /// <summary>
    /// Gets or sets the text for the cancel button.
    /// </summary>
    [Parameter]
    public string CancelButtonText { get; set; } = "";

    /// <summary>
    /// Gets or sets the color scheme of the dialog.
    /// </summary>
    [Parameter]
    public Color ColorScheme { get; set; } = Color.Success;

    /// <summary>
    /// Closes the dialog and returns a successful result.
    /// </summary>
    void Submit() => MudDialog?.Close(DialogResult.Ok(true));

    /// <summary>
    /// Closes the dialog and returns a canceled result.
    /// </summary>
    void Cancel() => MudDialog?.Close(DialogResult.Ok(false));
}